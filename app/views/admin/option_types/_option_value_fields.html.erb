<% signed_amount = (f.object.amount.to_i > 0 ? "+" : "") + f.object.amount.to_s %>
<tr class="option_value fields" id="<%= dom_id(f.object) %>">
  <td class='name'><%= f.text_field :name %></td>
  <td class='presentation'><%= f.text_field :presentation %></td>
  <td class='amount'><%= f.text_field :amount, :value => signed_amount %><%= t(:'number.currency.format.unit') %></td>
  <td class='sku'><%= f.text_field :skupartial %></td>
  <td class="actions"><%= link_to_remove_fields t("remove"), f %></td>
</tr>
